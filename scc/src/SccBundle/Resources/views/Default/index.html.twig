<!DOCTYPE html>
<html>

    <head>
        <meta charset="UTF-8">
        <meta name="author" content="marcha_r & tison_t & laitse_p">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
        <link rel="stylesheet" href="{{ asset('bundles/adesignscalendar/css/fullcalendar/fullcalendar.css') }}" />
        {% block stylesheets %}
            {% stylesheets  "SccBundle/Assets/css/defaugit lt.css" filter='cssrewrite' %}
                <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets %}
        {% endblock %}

    </head>

    <body>

        <header>
            <nav class="navbar navbar-inverse">
                <div class="container-fluid">
                    <div class="collapse navbar-collapse">
                    <!--<div class="navbar-header">-->
                        <a class="navbar-brand" href="{{ path('indexUser') }}">Intra MoovOne</a>
                        <a class="">
                            <img class="logo" src="{{ asset('img/MoovOne.png') }}" alt="logo MoovOne" />
                        </a>
                    <!--<div class="collapse navbar-collapse">-->
                        <ul class="nav navbar-nav navbar-right">
                            {% if is_granted('ROLE_USER') %}
                                <li><a href="{{ path('indexUser') }}">Mon profil</a></li>
                            {% elseif is_granted('ROLE_SUPER_ADMIN') %}
                                <li><a href="{{ path('indexAdmin') }}">Admin</a></li>
                            {% endif %}
                            <li><a href="{{ path('indexCandidature') }}">Candidatures</a></li>
                            <li><a href="#/forum">Forum</a></li>
                            <li><a href="{{ path('indexAgenda') }}">Agenda</a></li>
                            <li><a href="{{ path('indexFaq') }}">FAQ</a></li>
                            <li><a href="{{ path('logout') }}">Déconnexion</a></li>
                        </ul>
                        <form class="navbar-form navbar-right" role="search">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Rechercher">
                            </div>
                            <button type="submit" class="btn">Rechercher</button>
                        </form>
                    </div>
                    </div>
                </div>
            </nav>
        </header>

        {% block body %}{% endblock %}

        {% block footer %}

        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <p><h3>Informations</h3>
                            MoovOne<br />
                            9 rue George V<br />
                            Email: contact@mooveone.com<br />
                            Tel: 0102030405<br />
                            <a ng-href="#/contact">Contactez-nous</a>
                        </p>
                    </div>
                    <div class="col-md-4">
                        <h3>Suivez notre actualité</h3>
                        <ul>
                            <a href="https://www.facebook.com/moovone"><i class="fa fa-facebook fa-3x" aria-hidden="true"></i></a>
                            <a href="https://twitter.com/moovone"><i class="fa fa-twitter fa-3x" aria-hidden="true"></i></a>
                            <a href="https://twitter.com/moovone"><i class="fa fa-linkedin fa-3x" aria-hidden="true"></i></a>
                            <a href="https://plus.google.com/+MoovoneEu/"><i class="fa fa-google-plus fa-3x" aria-hidden="true"></i></a>
                        </ul>
                    </div>
                    <div class="col-md-4">
                        <h3>A propos</h3>
                        <p>
                            MoovOne lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum
                            lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum
                        </p>
                    </div>
                </div>
            </div>
        </footer>

        {% endblock %}

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
        {% block javascripts %}{% endblock %}

    </body>
</html>